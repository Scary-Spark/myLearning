# count number of rows functions
SELECT COUNT(amount)
FROM transactions;

# also can add statement
SELECT COUNT(amount)
FROM transactions
WHERE transaction_id>=1003;

# set nickname for the column
SELECT COUNT(amount) AS count
FROM transactions;



# find max VALUES
SELECT MAX(amount)
FROM transactions;

# find min value
SELECT MIN(amount)
FROM transactions;

# average
SELECT AVG(amount) AS average
FROM transactions;

# sum
SELECT SUM(amount) AS average
FROM transactions;

# concatinate
SELECT CONCAT(first_name," ", last_name) AS full_name
FROM employees;
